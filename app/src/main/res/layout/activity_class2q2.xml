<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Class2q2">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/qq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q1c1"
        android:text="What is the difference of 420-319= ?"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q1c1"
        android:onClick="c2q2opt1"
        android:text="109"
        android:layout_marginLeft="100dp">
    </Button>
    <Button
        android:id="@+id/op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q1c1"
        android:onClick="c2q2opt2"
        android:text="101"
        android:layout_marginLeft="210dp"
        />
    <Button
        android:id="@+id/op3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/op1"
        android:onClick="c2q2opt3"
        android:text="100"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:id="@+id/op4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/op2"
        android:onClick="c2q2opt4"
        android:text="103"
        android:layout_marginLeft="210dp"
        />



</RelativeLayout>